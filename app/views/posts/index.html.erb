<div class="all-post-container">
<!--  <h1>Home</h1>-->
  <div class="home-announce">
    <%= link_to '【本HPの目的】', about_path, class: 'h1-link' %>
    <p>
      皆さんで建設的な議論をしましょう！
    </p>
  </div>

  <div class="search-container">
    <%= search_form_for @q, html: { class: 'search-form' } do |f| %>
      <div>
        <%= f.label :title_or_content_or_comments_content_cont, "キーワード検索" %>
        <%= f.search_field :title_or_content_or_comments_content_cont %>
      </div>
      <div class="button-container">
        <%= f.submit "検索" %>
      </div>
    <% end %>

    <% if params[:q] && params[:q][:title_or_content_or_comments_content_cont].present? %>
      <div class="search-keyword">
        <%= params[:q][:title_or_content_or_comments_content_cont] %>
      </div>
    <% end %>
  </div>

  <!--  <hr class="announce-post-border">-->

  <div class="post-list">
    <% @posts.each do |post| %>
      <%= render 'post', post: post %>
    <% end %>
  </div>

  <div class="pagination">
    <%= paginate @posts %>
  </div>

</div>
